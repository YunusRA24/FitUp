{
  "manifest_version": 3,
  "name": "FitUp Proto - Screenshot & Catalog",
  "version": "0.1",
  "description": "Capture page screenshot, extract product info, and keep a running list (prototype).",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "FitUp"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
